{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org",
      "loglevel": "verbose"
    }
  },
  "npmClient": "yarn",
  "ignoreChanges": [
    "CHANGELOG.md",
    "packages/**/CHANGELOG.md",
    "node_modules/**",
    "package.json",
    "*.md",
    ".github/**",
    "packages/**/.eslintrc.js",
    "packages/**/.gitignore"
  ]
}
